<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 1
            Label:
                text: 'Correct: ' + str(root.score[0])
                font_size: 40
                color: ([0, 1, 0, 1])
            Label:
                text: 'Missed: ' + str(root.score[1])
                font_size: 40
                color: ([1, 0, 0, 1])
        Label:
            text: root.equation
            font_size: 150
            size_hint_y: 3
        Button: 
            color: root.evalColor
            text: root.inputTry
            font_size: 50
			on_press: root.backspace()
            size_hint_y: 2
        GridLayout: 
            size_hint_y: 3
            rows: 2
            Button:
                text: '1'
                font_size: 75
                on_press: root.buildInputTry('1')
            Button:
                text: '2'    
                font_size: 75                
                on_press: root.buildInputTry('2')
            Button:
                text: '3'
                font_size: 75
                on_press: root.buildInputTry('3')                
            Button:
                text: '4'
                font_size: 75
                on_press: root.buildInputTry('4')                
            Button:
                text: '5'
                font_size: 75
                on_press: root.buildInputTry('5')               
            Button:
                text: '6'
                font_size: 75
                on_press: root.buildInputTry('6')               
            Button:
                text: '7'
                font_size: 75
                on_press: root.buildInputTry('7')                
            Button:
                text: '8'
                font_size: 75
                on_press: root.buildInputTry('8')                
            Button:
                text: '9'
                font_size: 75
                on_press: root.buildInputTry('9')                
            Button:
                text: '0'
                font_size: 75
                on_press: root.buildInputTry('0')   
